<Window x:Class="DemoStackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Orientation="Horizontal">
        <Rectangle Fill="Red" Height="100" Width="50"></Rectangle>
        <Rectangle Fill="Blue" Height="50" Width="100"></Rectangle>
        <Rectangle Fill="Green" Margin="10" Height="150" Width="200"></Rectangle>
        <Rectangle Width="400" Fill="BlueViolet"></Rectangle>
    </StackPanel>
</Window>
